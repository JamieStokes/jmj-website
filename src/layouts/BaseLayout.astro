---
// BaseLayout.astro
// HTML shell with meta, fonts, Header, Footer
import Header from '../components/Header.astro';
import MobileNav from '../components/MobileNav.astro';
import Footer from '../components/Footer.astro';
import GridBackground from '../components/GridBackground.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  currentPath?: string;
}

const {
  title,
  description = 'JMJ Cloud - Oracle Technology Delivered. We build and extend Oracle solutions — ERP Cloud, APEX, E-Business Suite — with modern architecture and clean code.',
  currentPath = Astro.url.pathname,
} = Astro.props;

const siteTitle = title === 'Home' ? 'JMJ Cloud | Oracle Technology Delivered' : `${title} | JMJ Cloud`;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{siteTitle}</title>

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/favicon.png" />

    <!-- Preconnect to Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Google Fonts -->
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:wght@400;500;600&family=JetBrains+Mono:wght@400;500;600&display=swap"
      rel="stylesheet"
    />

    <!-- Open Graph -->
    <meta property="og:title" content={siteTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="JMJ Cloud" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={siteTitle} />
    <meta name="twitter:description" content={description} />

    <!-- Theme Color -->
    <meta name="theme-color" content="#0a0a0f" />

    <!-- Microsoft Clarity -->
    <script type="text/javascript">
      (function(c,l,a,r,i,t,y){
          c[a]=c[a]||function(){(c[a].q=c[a].q||[]).push(arguments)};
          t=l.createElement(r);t.async=1;t.src="https://www.clarity.ms/tag/"+i;
          y=l.getElementsByTagName(r)[0];y.parentNode.insertBefore(t,y);
      })(window, document, "clarity", "script", "v2dscqgy08");
    </script>
  </head>
  <body>
    <a href="#main-content" class="skip-link">Skip to main content</a>
    <GridBackground />
    <Header currentPath={currentPath} />
    <MobileNav currentPath={currentPath} />

    <main id="main-content">
      <slot />
    </main>

    <Footer />
  </body>
</html>

<style is:global>
  html {
    scrollbar-gutter: stable;
  }

  body {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  body.nav-open {
    overflow: hidden;
  }

  main {
    flex: 1;
    padding-top: var(--header-height);
  }
</style>
