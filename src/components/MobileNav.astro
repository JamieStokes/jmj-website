---
// MobileNav.astro
// Mobile navigation drawer
interface Props {
  currentPath?: string;
}

const { currentPath = '/' } = Astro.props;

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/resume', label: 'Resume' },
  { href: '/blog', label: 'Blog' },
  { href: '/about', label: 'About' },
  { href: '/contact', label: 'Contact' },
];
---

<nav class="mobile-nav" id="mobile-nav" aria-label="Mobile navigation">
  <div class="mobile-nav-inner">
    <ul class="mobile-nav-list">
      {navLinks.map((link, index) => (
        <li style={`--delay: ${index * 0.05}s`}>
          <a
            href={link.href}
            class:list={['mobile-nav-link', { active: currentPath === link.href }]}
          >
            {link.label}
          </a>
        </li>
      ))}
    </ul>

    <div class="mobile-nav-footer">
      <p class="mobile-nav-tagline">Oracle Technology Delivered</p>
      <a
        href="https://www.linkedin.com/company/jmjcloud"
        target="_blank"
        rel="noopener noreferrer"
        class="social-link"
        aria-label="JMJ Cloud on LinkedIn"
      >
        <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
          <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
        </svg>
      </a>
    </div>
  </div>
</nav>

<style>
  .mobile-nav {
    position: fixed;
    top: var(--header-height);
    left: 0;
    right: 0;
    bottom: 0;
    background-color: var(--bg-primary);
    z-index: 99;
    opacity: 0;
    visibility: hidden;
    transition: opacity var(--transition-base), visibility var(--transition-base);
  }

  .mobile-nav.open {
    opacity: 1;
    visibility: visible;
  }

  .mobile-nav-inner {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
    padding: var(--space-8) var(--space-6);
    overflow-y: auto;
  }

  .mobile-nav-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .mobile-nav-list li {
    opacity: 0;
    transform: translateX(-20px);
    transition: opacity var(--transition-slow), transform var(--transition-slow);
    transition-delay: var(--delay, 0s);
  }

  .mobile-nav.open .mobile-nav-list li {
    opacity: 1;
    transform: translateX(0);
  }

  .mobile-nav-link {
    display: block;
    font-family: var(--font-display);
    font-size: var(--text-2xl);
    color: var(--text-secondary);
    padding: var(--space-4) 0;
    border-bottom: 1px solid var(--border-subtle);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .mobile-nav-link:hover,
  .mobile-nav-link.active {
    color: var(--accent-primary);
  }

  .mobile-nav-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: var(--space-6);
    border-top: 1px solid var(--border-subtle);
  }

  .mobile-nav-tagline {
    font-family: var(--font-display);
    font-size: var(--text-sm);
    color: var(--text-muted);
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    color: var(--text-secondary);
    transition: color var(--transition-fast);
  }

  .social-link:hover {
    color: var(--accent-primary);
  }

  @media (min-width: 1024px) {
    .mobile-nav {
      display: none;
    }
  }
</style>
