---
// index.astro
// Home page
import BaseLayout from '../layouts/BaseLayout.astro';
import TerminalText from '../components/TerminalText.astro';
import ServiceCard from '../components/ServiceCard.astro';

const services = [
  {
    title: 'Oracle ERP Cloud',
    description: 'Implementation, integrations, extensions, and reporting for Oracle Cloud ERP and HCM.',
    icon: 'cloud' as const,
    image: '/images/oracle-cloud.png',
  },
  {
    title: 'Oracle APEX & ORDS',
    description: 'Custom application development, REST APIs, and modernization using Oracle\'s low-code platform.',
    icon: 'code' as const,
    image: '/images/apex-rounded-corners.png',
  },
  {
    title: 'E-Business Suite',
    description: 'EBS extensions, integrations, cloud coexistence, and migration planning.',
    icon: 'database' as const,
    image: '/images/oracle-ebs.png',
  },
];

// Latest projects data
const latestProjects = [
  {
    title: 'Fortune 500 ERP Cloud Implementation',
    description: 'Leading Oracle Fusion Cloud ERP implementation for a global manufacturing client with GL, AP, AR, and PPM modules.',
    status: 'Active',
    technologies: ['Oracle Fusion Cloud', 'OTBI', 'REST APIs'],
    industry: 'Manufacturing',
  },
  {
    title: 'APEX Modernization Initiative',
    description: 'Building modern web interfaces for critical E-Business Suite workflows using Oracle APEX with mobile-responsive approval workflows.',
    status: 'Active',
    technologies: ['Oracle APEX 24.1', 'ORDS', 'PWA'],
    industry: 'Enterprise',
  },
  {
    title: 'Healthcare ERP Cloud Migration',
    description: 'Successfully migrated 5,000-user healthcare organization from on-premise EBS to Oracle Cloud ERP with zero downtime cutover.',
    status: 'Completed 2024',
    technologies: ['Oracle Cloud ERP', 'Cloud HCM', 'OIC'],
    industry: 'Healthcare',
  },
];
---

<BaseLayout title="Home" currentPath="/">
  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <div class="hero-content fade-in fade-in-1">
        <TerminalText text="JMJ Cloud" tag="h1" class="hero-title" />
        <p class="hero-tagline">Enterprise Oracle. Modern Speed.</p>
        <p class="hero-description">
          We transform Oracle ERP Cloud and E-Business Suite into powerful, production-ready systems using APEX, OIC integrations, mobile experiences, and AI automations that are shipped in agile sprints, not years.
        </p>
        <div class="hero-actions">
          <a href="/resume" class="btn btn-primary">View Our Work</a>
          <a href="mailto:info@jmjcloud.com" class="btn btn-secondary">Get in Touch</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="services">
    <div class="container">
      <div class="services-header fade-in fade-in-2">
        <h2 class="section-title">What We Do</h2>
        <div class="capabilities-grid">
          <div class="capability-item">
            <span class="capability-icon">▸</span>
            <p><strong>Oracle ERP expertise (Cloud + EBS):</strong> implementations, enhancements, upgrades, integrations, and ongoing support</p>
          </div>
          <div class="capability-item">
            <span class="capability-icon">▸</span>
            <p><strong>Build & enhance Oracle solutions:</strong> custom extensions, workflow automation, APEX/ORDS apps, and user-facing tools</p>
          </div>
          <div class="capability-item">
            <span class="capability-icon">▸</span>
            <p><strong>Integrate everything:</strong> OIC, APIs (REST/SOAP), event-driven integrations, and data flows between Oracle and third-party systems</p>
          </div>
          <div class="capability-item">
            <span class="capability-icon">▸</span>
            <p><strong>Enterprise mobile & AI:</strong> secure iOS/cross-platform apps and AI-enabled workflows for productivity</p>
          </div>
          <div class="capability-item">
            <span class="capability-icon">▸</span>
            <p><strong>Modernize & migrate:</strong> cloud adoption, performance tuning, and technical debt reduction</p>
          </div>
          <div class="capability-item">
            <span class="capability-icon">▸</span>
            <p><strong>Reporting, analytics & support:</strong> dashboards, automated extracts, and steady-state support</p>
          </div>
        </div>
      </div>

      <div class="services-grid">
        {services.map((service, index) => (
          <div class={`fade-in fade-in-${index + 3}`}>
            <ServiceCard {...service} />
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Latest Projects Section -->
  <section class="recent-posts">
    <div class="container">
      <h2 class="section-title">Latest Projects</h2>
      <div class="projects-grid">
        {latestProjects.map((project) => (
          <article class="project-card glow-border">
            <div class="project-status">
              <span class={`status-badge ${project.status.includes('Active') ? 'active' : 'completed'}`}>
                {project.status}
              </span>
            </div>
            <h3 class="project-title">{project.title}</h3>
            <p class="project-summary">{project.description}</p>
            <div class="project-tags">
              {project.technologies.map((tech) => (
                <span class="tag tech">{tech}</span>
              ))}
              <span class="tag industry">{project.industry}</span>
            </div>
          </article>
        ))}
      </div>
      <div class="posts-footer">
        <a href="/resume" class="view-all-link">
          View All Projects <span aria-hidden="true">→</span>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Hero Section */
  .hero {
    padding: var(--space-20) 0 var(--space-16);
    text-align: center;
  }

  .hero-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .hero-title {
    font-size: var(--text-4xl);
    margin-bottom: var(--space-4);
  }

  .hero-tagline {
    font-family: var(--font-display);
    font-size: var(--text-xl);
    color: var(--accent-primary);
    margin-bottom: var(--space-6);
  }

  .hero-description {
    font-size: var(--text-lg);
    color: var(--text-secondary);
    margin-bottom: var(--space-8);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-actions {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    justify-content: center;
    align-items: center;
  }

  /* Services Section */
  .services {
    padding: var(--space-16) 0;
    background-color: var(--bg-secondary);
  }

  .services-header {
    margin-bottom: var(--space-12);
  }

  .section-title {
    text-align: center;
    margin-bottom: var(--space-8);
    font-size: var(--text-3xl);
  }

  .services-grid {
    display: grid;
    gap: var(--space-6);
  }

  .capabilities-grid {
    display: grid;
    gap: var(--space-4);
    max-width: 900px;
    margin: 0 auto;
  }

  .capability-item {
    display: flex;
    gap: var(--space-3);
    align-items: flex-start;
  }

  .capability-icon {
    color: var(--accent-primary);
    font-size: var(--text-lg);
    flex-shrink: 0;
    margin-top: var(--space-1);
  }

  .capability-item p {
    font-size: var(--text-sm);
    color: var(--text-secondary);
    line-height: 1.6;
  }

  .capability-item strong {
    color: var(--text-primary);
  }

  /* Recent Projects Section */
  .recent-posts {
    padding: var(--space-16) 0;
  }

  .projects-grid {
    display: grid;
    gap: var(--space-6);
    margin-bottom: var(--space-8);
  }

  .project-card {
    display: flex;
    flex-direction: column;
    background-color: var(--bg-secondary);
    border-radius: var(--radius-lg);
    padding: var(--space-6);
  }

  .project-status {
    margin-bottom: var(--space-3);
  }

  .status-badge {
    font-family: var(--font-display);
    font-size: var(--text-xs);
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-sm);
    display: inline-block;
  }

  .status-badge.active {
    background-color: var(--accent-glow);
    color: var(--accent-primary);
  }

  .status-badge.completed {
    background-color: rgba(0, 255, 136, 0.15);
    color: var(--success);
  }

  .project-title {
    font-family: var(--font-display);
    font-size: var(--text-lg);
    line-height: 1.3;
    margin-bottom: var(--space-3);
    color: var(--text-primary);
  }

  .project-summary {
    font-size: var(--text-sm);
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: var(--space-4);
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }

  .tag {
    font-family: var(--font-display);
    font-size: var(--text-xs);
    padding: var(--space-1) var(--space-2);
    border-radius: var(--radius-sm);
  }

  .tag.tech {
    color: var(--accent-primary);
    background-color: var(--accent-glow);
  }

  .tag.industry {
    color: var(--warning);
    background-color: rgba(255, 170, 0, 0.15);
  }

  .posts-footer {
    text-align: center;
  }

  .view-all-link {
    font-family: var(--font-display);
    font-size: var(--text-base);
    color: var(--accent-primary);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .view-all-link:hover {
    color: var(--accent-secondary);
  }

  /* Responsive */
  @media (min-width: 480px) {
    .hero-actions {
      flex-direction: row;
    }
  }

  @media (min-width: 768px) {
    .hero {
      padding: var(--space-24) 0 var(--space-20);
    }

    .projects-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .capabilities-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .services-grid {
      grid-template-columns: repeat(3, 1fr);
    }

    .projects-grid {
      grid-template-columns: repeat(3, 1fr);
    }

    .capabilities-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>
